{
  "name": "backend",
  "version": "1.0.0",
  "description": "Speech to text backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node --project tsconfig.json src/index.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "clean": "rm -rf dist/ && rm -f lambda-unified.zip",
    "lambda:build": "npm run clean && npm run build && cd dist && cp ../package.json . && npm install --production --no-package-lock",
    "lambda:package": "cd dist && zip -r ../lambda-unified.zip .",
    "lambda:verify": "unzip -l lambda-unified.zip | grep -E '\\.(js|json)$' | head -20",
    "deploy:manual": "npm run lambda:build && npm run lambda:package && npm run lambda:verify",
    "lambda:size": "ls -lh lambda-unified.zip | awk '{print \"ðŸ“¦ Package size: \" $5}'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/speech": "^6.6.0",
    "@vendia/serverless-express": "^4.12.6",
    "assemblyai": "^4.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "multer": "1.4.5-lts.1",
    "openai": "^4.51.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
