{
  "name": "speech-to-text-monorepo",
  "version": "1.0.0",
  "description": "Speech to text application with frontend and backend",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --filter frontend --filter backend dev",
    "build": "pnpm --filter frontend --filter backend build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lambda:deploy": "pnpm --filter backend run deploy:manual",
    "lambda:build": "pnpm --filter backend run lambda:build",
    "lambda:package": "pnpm --filter backend run lambda:package",
    "release:patch": "npm version patch && git push origin main --tags",
    "release:minor": "npm version minor && git push origin main --tags",
    "release:major": "npm version major && git push origin main --tags"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "typescript": "^5.2.2"
  }
}
